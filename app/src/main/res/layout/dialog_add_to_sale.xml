<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_big"
        android:paddingTop="@dimen/margin_big"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <ImageView
            android:contentDescription="@string/desc_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_title"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/ic_cart_plus"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:text="@string/add_to_current_sale"
            android:padding="@dimen/padding_title"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center">
        <ImageButton
            android:id="@+id/btn_minus"
            android:padding="@dimen/padding_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button_gray"
            app:srcCompat="@drawable/ic_minus"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:layout_width="wrap_content"
            android:text="1"
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:minWidth="32dp"
            android:textAlignment="center"
            android:layout_margin="@dimen/padding_medium"
            android:id="@+id/et_product_qty"/>
        <ImageButton
            android:id="@+id/btn_plus"
            android:layout_width="wrap_content"
            android:padding="@dimen/padding_medium"
            android:background="@drawable/selector_button_gray"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_plus"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorSubtleGray">

        <ImageButton
            android:padding="@dimen/padding_medium"
            android:contentDescription="@string/desc_ok_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_ok"
            android:background="@drawable/selector_button_gray"
            app:srcCompat="@drawable/ic_check"/>
    </LinearLayout>
</LinearLayout>