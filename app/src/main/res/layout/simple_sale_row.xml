<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:minHeight="48dp"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorSubtleError"
        android:gravity="center_vertical|end"
        android:orientation="horizontal"
        android:tag="Bottom3">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_confirm_delete"
            android:padding="4dp"
            android:background="@color/colorSubtleError"
            app:srcCompat="@drawable/ic_delete_big" />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_title"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textAlignment="center"
            android:id="@+id/tv_product_qty"/>
        <TextView
            android:id="@+id/tv_sale_concept"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:textColor="@color/defaultText"
            android:layout_height="wrap_content"
            android:layout_weight="7" />

        <TextView
            android:layout_width="0dp"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/defaultText"
            android:textAlignment="center"
            android:id="@+id/tv_sale_total"/>
    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>