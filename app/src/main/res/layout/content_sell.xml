<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pocket.poktsales.activities.SellActivity"
    tools:showIn="@layout/activity_sell">
    <GridView
        android:layout_marginBottom="@dimen/margin_big"
        android:numColumns="auto_fit"
        android:verticalSpacing="@dimen/margin_big"
        android:horizontalSpacing="@dimen/padding_medium"
        android:id="@+id/grid"
        android:columnWidth="120sp"
        android:gravity="center"
        android:stretchMode="columnWidth"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
